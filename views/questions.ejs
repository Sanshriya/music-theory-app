<!doctype html>
<html>
<head>
    <title>Question <%= questionNumber %></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
</head>
<body>
    <h1>Question <%= questionNumber %></h1>

    <% if (currentQuestion) { %>
        <!-- Display the question -->
        <p><%= currentQuestion.question %></p>

        <!-- Form to submit answer -->
        <form action="/answer-feedback" method="POST">
            <label for="userAnswer">Your Answer:</label>
            <input type="text" id="userAnswer" name="userAnswer" required>
            <input type="hidden" name="correctAnswer" value="<%= currentQuestion.answer %>">
            <input type="hidden" name="questionId" value="<%= currentQuestion.id %>">
            <input type="hidden" name="questionNumber" value="<%= questionNumber %>">
            <input type="hidden" name="topicName" value="<%= topicName %>">
            <button type="submit">Submit</button>
        </form>
        
    <% } else { %>
        <p>No question found for this topic and question number.</p>
    <% } %>

    <!-- Navigation links -->
    <div>
        <% if (questionNumber > 1) { %>
            <a href="/topics/<%= topicName %>/<%= questionNumber - 1 %>">Previous Question</a>
        <% } %>
        <% if (questionNumber < 5) { %>
            <a href="/topics/<%= topicName %>/<%= questionNumber + 1 %>">Next Question</a>
        <% } %>
    </div>

    <a href="/topics">Back to Topics</a>
    <a href="/">Back to Home</a>
</body>
</html>
